<body class="bg-reef-light min-h-screen flex flex-col">
    <!-- Navigation -->
    <nav class="navbar bg-reef-dark text-reef-light shadow-lg">
        <div class="container mx-auto px-4">
            <div class="flex-1">
                <a href="/" class="btn btn-ghost normal-case text-xl text-reef-light">ReefTree</a>
            </div>
            <div class="flex-none">
                <ul class="menu menu-horizontal px-1">
                    <li><a href="/build" class="text-reef-light hover:text-reef-teal">Builder</a></li>
                    <li><a href="/logout" class="text-reef-light bg-reef-coral hover:bg-reef-teal ml-2">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow container mx-auto px-4 py-8">
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-reef-dark mb-2">Plan Your Reef</h1>
            <p class="text-xl text-reef-teal">Track Your Growth</p>
            <a href="/builds/new" class="btn bg-reef-teal border-reef-teal hover:bg-reef-coral text-white mt-6">
                + Create New Build
            </a>
        </div>

        <!-- Builds Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% for(let build of builds){ %>
            <div class="card reef-card bg-white shadow-md">
                <figure>
                    <img src="<%= build.image || 'https://via.placeholder.com/400x200?text=Reef+Build' %>" 
                         alt="<%= build.name %>" 
                         class="reef-image w-full">
                </figure>
                <div class="card-body">
                    <h2 class="card-title text-reef-dark"><%= build.name %></h2>
                    <p class="text-gray-600"><%= build.description || 'No description' %></p>
                    <div class="mt-4">
                        <div class="badge badge-outline border-reef-teal text-reef-teal mr-2">
                            <%= build.components.length %> Components
                        </div>
                        <div class="badge badge-outline border-reef-coral text-reef-coral">
                            $<%= build.totalPrice.toFixed(2) %>
                        </div>
                    </div>
                    <div class="card-actions justify-end mt-4">
                        <a href="/builds/<%= build._id %>" 
                           class="btn btn-sm bg-reef-teal border-reef-teal hover:bg-reef-coral text-white">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
            <% } %>
        </div>

        <!-- Empty State -->
        <% if(builds.length === 0){ %>
        <div class="text-center py-12">
            <div class="w-32 h-32 mx-auto mb-6 text-reef-teal">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
            </div>
            <h2 class="text-2xl font-bold text-reef-dark mb-2">No Builds Yet</h2>
            <p class="text-gray-600 mb-6">Start by creating your first reef tank build</p>
            <a href="/builds/new" class="btn bg-reef-teal border-reef-teal hover:bg-reef-coral text-white">
                Create Your First Build
            </a>
        </div>
        <% } %>
    </main>

    <!-- Footer -->
    <footer class="footer p-10 bg-reef-sea text-reef-light">
        <div class="container mx-auto px-4">
            <div>
                <span class="footer-title text-reef-light">ReefTree</span> 
                <a href="/about" class="link link-hover text-reef-light">About us</a>
                <a href="/contact" class="link link-hover text-reef-light">Contact</a>
                <a href="/privacy" class="link link-hover text-reef-light">Privacy policy</a>
            </div> 
            <div>
                <span class="footer-title text-reef-light">Resources</span> 
                <a href="/guides" class="link link-hover text-reef-light">Beginner's Guide</a>
                <a href="/blog" class="link link-hover text-reef-light">Blog</a>
                <a href="/forum" class="link link-hover text-reef-light">Community</a>
            </div> 
        </div>
        <div class="container mx-auto px-4 pt-6 text-center">
            <p>&copy; 2023 ReefTree. All rights reserved.</p>
        </div>
    </footer>

    <script type="text/javascript" src="/js/main.js"></script>
